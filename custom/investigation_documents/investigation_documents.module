<?php

declare(strict_types=1);

/**
 * @file
 * Provides an investigationdocuments entity type.
 */

use Drupal\Core\Render\Element;
use Drupal\user\UserInterface;

/**
 * Implements hook_theme().
 */
function investigation_documents_theme(): array {
  return [
    'investigation_documents_investigationdocuments' => ['render element' => 'elements'],
  ];
}

/**
 * Prepares variables for investigationdocuments templates.
 *
 * Default template: investigation-documents-investigationdocuments.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the investigationdocuments information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_investigation_documents_investigationdocuments(array &$variables): void {
  $variables['view_mode'] = $variables['elements']['#view_mode'];
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}

/**
 * Implements hook_user_cancel().
 */
function investigation_documents_user_cancel($edit, UserInterface $account, $method): void {
  switch ($method) {
    case 'user_cancel_block_unpublish':
      // Unpublish investigationdocumentss.
      $storage = \Drupal::entityTypeManager()->getStorage('investigation_documents_investigationdocuments');
      $investigation_documents_investigationdocuments_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->condition('status', 1)
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($investigation_documents_investigationdocuments_ids) as $investigation_documents_investigationdocuments) {
        $investigation_documents_investigationdocuments->set('status', FALSE)->save();
      }
      break;

    case 'user_cancel_reassign':
      // Anonymize investigationdocumentss.
      $storage = \Drupal::entityTypeManager()->getStorage('investigation_documents_investigationdocuments');
      $investigation_documents_investigationdocuments_ids = $storage->getQuery()
        ->condition('uid', $account->id())
        ->accessCheck(FALSE)
        ->execute();
      foreach ($storage->loadMultiple($investigation_documents_investigationdocuments_ids) as $investigation_documents_investigationdocuments) {
        $investigation_documents_investigationdocuments->setOwnerId(0)->save();
      }
      break;
  }
}

/**
 * Implements hook_ENTITY_TYPE_predelete() for user entities.
 */
function investigation_documents_user_predelete(UserInterface $account): void {
  // Delete investigationdocumentss that belong to this account.
  $storage = \Drupal::entityTypeManager()->getStorage('investigation_documents_investigationdocuments');
  $investigation_documents_investigationdocuments_ids = $storage->getQuery()
    ->condition('uid', $account->id())
    ->accessCheck(FALSE)
    ->execute();
  $storage->delete(
    $storage->loadMultiple($investigation_documents_investigationdocuments_ids)
  );
  // Delete old revisions.
  $investigation_documents_investigationdocuments_ids = $storage->getQuery()
    ->allRevisions()
    ->condition('uid', $account->id())
    ->accessCheck(FALSE)
    ->execute();
  foreach (array_keys($investigation_documents_investigationdocuments_ids) as $revision_id) {
    $storage->deleteRevision($revision_id);
  }
}
